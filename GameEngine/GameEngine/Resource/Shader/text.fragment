#version 330 core

in vec2 TexCoords;
in vec4 fragColor;

out vec4 color;

uniform sampler2D Texture;

void main()
{    
    //vec4 sampled = vec4(1.0, 1.0, 1.0, texture(Texture, TexCoords).r);
	// vec2 newTexCoord = 0.5 * TexCoords + vec2(0.5, 0.5);
    color = fragColor * texture(Texture, TexCoords).r;
}  