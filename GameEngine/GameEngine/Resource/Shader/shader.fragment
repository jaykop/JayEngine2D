#version 330 core

// interpolated valuse form the vertex shaders
in vec4 fragmentColor;
in vec2 fragTexCoord;
flat int fragmentType;

//Texture ID
uniform sampler2D Texture;

// Ouput data
out vec4 finalColor;

void main()
{
		
	finalColor = fragmentColor * texture(Texture, fragTexCoord);

	//if (fragmentType != 0) {
		//finalColor = fragmentColor * texture(Texture, fragTexCoord);
	//}
}